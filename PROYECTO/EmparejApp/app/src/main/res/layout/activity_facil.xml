<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.FacilActivity">

    <RelativeLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:onClick="onClick"
            android:src="@drawable/volver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="45dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/primero"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barra"
        android:layout_marginTop="10dp"
        android:background="@color/turno"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/juagdor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/primero"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAYER 1: "
            android:textAlignment="center"
            android:textColor="@color/turnoletra"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/puntaje1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntaje: "
            android:textAlignment="center"
            android:textColor="@color/turnoletra"
            android:textSize="20sp" />
    </LinearLayout>

    <Chronometer
        android:id="@+id/tiempoNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/juagdor1"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tiempoNormal"
        android:text="Puntaje: "
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:visibility="invisible" />


    <GridLayout
        android:background="#00000000"
        android:elevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:columnCount="4">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/quien" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAYER 1: "
            android:textAlignment="center"
            android:textColor="@color/turnoletra"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/puntaje2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntaje: "
            android:textAlignment="center"
            android:textColor="@color/turnoletra"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/segundo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#000"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>